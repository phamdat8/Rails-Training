<div class="container">
<h1>User return book</h1>

<table class="table">
  <thead>
    <tr>
      <th>Book</th>
      <th>User</th>
      <th>Status</th>
      <th>Borrowed date</th>
      <th>Appointment returned date</th>
      <th>Returned date</th>
      <th>Penalty fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrows.each do |borrow| %>
      <tr>
        <td><%= borrow.book.name %></td>
        <td><%= borrow.user.email %></td>
        <td>Return</td>
        <td><%=borrow.borrowed_date%></td>
        <td><%=borrow.borrowed_date + 14%></td>
        <td><%=borrow.returned_date%></td>
        <td><%=borrow.penalty_fee%></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
