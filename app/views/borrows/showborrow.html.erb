<div class="container">
<h1>Borrows</h1>

<table class="table">
  <thead>
    <tr>
      <th>Book</th>
      <th>User</th>
      <th>Status</th>
      <th>Borrowed date</th>
      <th>Appointment returned date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrows.each do |borrow| %>
      <tr>
        <td><%= borrow.book.name %></td>
        <td><%= borrow.user.email %></td>
        <td>Borrowed</td>
        <td><%=borrow.borrowed_date%></td>
        <td><%=borrow.borrowed_date + 14%></td>
         <% if @current_user.role == "staff" %>
          <td>
                <%= form_for borrow do |f| %>
                  <%= f.hidden_field :status, value: "returned"%>
                  <%= f.submit "returned",class:"btn btn-success", data: { confirm: "Are you sure to confirm returned borrow has id #{borrow.id}  "}%>
                <%end%>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
